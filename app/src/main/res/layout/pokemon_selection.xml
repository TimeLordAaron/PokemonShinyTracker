<?xml version="1.0" encoding="utf-8"?>
<!--Pokemon Selection Nested Scroll View-->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

        <!--Pokemon Selection Layout-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ui_background_homepage">

                <!-- Selected Pokemon Section -->
                <LinearLayout
                    android:id="@+id/selected_pokemon_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <!--Selected Pokemon Label-->
                        <TextView
                            android:id="@+id/selected_pokemon_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:text="@string/selected_pokemon_label"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/black" />

                        <!--Selected Pokemon Recycler View-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/selected_pokemon_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never" />

                </LinearLayout>

                <!--Search Bar-->
                <EditText
                    android:id="@+id/search_pokemon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@android:drawable/edit_text"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:hint="@string/search_pokemon"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:inputType="text" />

                <!--Pokemon List Recycler View-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pokemon_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

        </LinearLayout>

</androidx.core.widget.NestedScrollView>
