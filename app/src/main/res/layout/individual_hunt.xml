<?xml version="1.0" encoding="utf-8"?>
<!--Individual Hunt Layout-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/individual_hunt_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_background_individual_hunt_incomplete">

    <com.example.pokemonshinytracker.FallingCirclesView
        android:id="@+id/falling_circles_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        android:importantForAccessibility="no"/>

    <!--Top Bar Container-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar_container"
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/ui_transparent_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--Top Bar Flow-->
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/top_bar_flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flow_wrapMode="chain"
            app:flow_horizontalGap="0dp"
            app:constraint_referenced_ids="back_button,save_button,delete_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!--Back Button-->
        <Button
            android:id="@+id/back_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_button_size"
            android:minHeight="@dimen/min_button_size"
            android:text="@string/back_button_text"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAllCaps="false" />

        <!--Save Button-->
        <Button
            android:id="@+id/save_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_button_size"
            android:minHeight="@dimen/min_button_size"
            android:text="@string/save_button_text"
            android:textSize="@dimen/text_size_small"
            android:textColor="#008800"
            android:textAllCaps="false" />

        <!--Delete Button-->
        <Button
            android:id="@+id/delete_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_button_size"
            android:minHeight="@dimen/min_button_size"
            android:visibility="gone"
            android:text="@string/delete_button_text"
            android:textSize="@dimen/text_size_small"
            android:textColor="#CC0000"
            android:textAllCaps="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Hunt Details Layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/individual_hunt_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--Pokemon Section-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pokemon_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            android:background="@drawable/ui_transparent_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/additional_details_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.48">

            <!--Pokemon Name-->
            <TextView
                android:id="@+id/selected_pokemon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_a_pokemon"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/black"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/selected_pokemon_form"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!--Pokemon Form-->
            <TextView
                android:id="@+id/selected_pokemon_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/black"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/selected_pokemon_name"
                app:layout_constraintBottom_toTopOf="@id/pokemon_image_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!--Pokemon Image + Form Change Buttons Container-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pokemon_image_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/selected_pokemon_form"
                app:layout_constraintBottom_toTopOf="@id/pokemon_selection_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!--Pokemon Image Flow-->
                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/pokemon_image_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flow_wrapMode="chain"
                    app:flow_horizontalGap="5dp"
                    app:constraint_referenced_ids="previous_form_button,pokemon_image,next_form_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!--Previous Form Button-->
                <ImageButton
                    android:id="@+id/previous_form_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:minWidth="@dimen/min_button_size"
                    android:minHeight="@dimen/min_button_size"
                    android:background="@null"
                    android:visibility="invisible"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_before"
                    android:contentDescription="@string/previous_form_description"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.24"
                    app:layout_constraintEnd_toStartOf="@id/pokemon_image" />

                <!--Pokemon Image-->
                <ImageView
                    android:id="@+id/pokemon_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/pokemon_image_description"
                    android:src="@drawable/etc_default"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.45" />

                <!--Next Form Button-->
                <ImageButton
                    android:id="@+id/next_form_button"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:minWidth="@dimen/min_button_size"
                    android:minHeight="@dimen/min_button_size"
                    android:background="@null"
                    android:visibility="invisible"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_next"
                    android:contentDescription="@string/next_form_description"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.24"
                    app:layout_constraintStart_toEndOf="@id/pokemon_image" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Pokemon Selection Button-->
            <ImageButton
                android:id="@+id/pokemon_selection_button"
                android:layout_width="@dimen/min_button_size"
                android:layout_height="@dimen/min_button_size"
                android:background="@null"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_pokeball"
                android:contentDescription="@string/pokemon_select_button_description"
                app:layout_constraintTop_toBottomOf="@id/pokemon_image_container"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Additional Hunt Details (Scroll)-->
        <ScrollView
            android:id="@+id/additional_details_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            android:background="@drawable/ui_transparent_container"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/pokemon_section"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.48">

            <!--Additional Hunt Details (Layout)-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!--Guideline for Label Column-->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.3"
                    android:orientation="vertical" />

                <!--Guidleine for Middle-->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.5"
                    android:orientation="vertical" />

                <!--Guideline for Field Column-->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.7"
                    android:orientation="vertical" />

                <!--Nickname Label-->
                <TextView
                    android:id="@+id/nickname_label"
                    android:labelFor="@id/nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/nickname_label"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_label" />

                <!--Nickname Textbox-->
                <EditText
                    android:id="@+id/nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_large"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:importantForAccessibility="no"
                    app:layout_constraintTop_toTopOf="@id/nickname_label"
                    app:layout_constraintBottom_toBottomOf="@id/nickname_label"
                    app:layout_constraintStart_toStartOf="@id/guideline_label"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!--Start Date Label-->
                <TextView
                    android:id="@+id/start_date_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/start_date_label"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/nickname_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_label" />

                <!--Start Date Selection Button-->
                <ImageButton
                    android:id="@+id/start_date_button"
                    android:layout_width="@dimen/min_button_size"
                    android:layout_height="@dimen/min_button_size"
                    android:layout_marginStart="@dimen/button_margin"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="@string/calendar_button_description"
                    app:layout_constraintTop_toTopOf="@id/start_date_label"
                    app:layout_constraintBottom_toBottomOf="@id/start_date_label"
                    app:layout_constraintStart_toStartOf="@id/guideline_label" />

                <!--Start Date-->
                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/button_margin"
                    android:padding="10dp"
                    android:background="@drawable/ui_transparent_container"
                    android:visibility="gone"
                    android:text=""
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    app:layout_constraintTop_toTopOf="@id/start_date_label"
                    app:layout_constraintBottom_toBottomOf="@id/start_date_label"
                    app:layout_constraintStart_toEndOf="@id/start_date_button" />

                <!--Unselect Start Date Button-->
                <ImageButton
                    android:id="@+id/unselect_start_date_button"
                    android:layout_width="@dimen/min_button_size"
                    android:layout_height="@dimen/min_button_size"
                    android:padding="10dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_x"
                    android:contentDescription="@string/date_unselect_description"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/start_date_label"
                    app:layout_constraintBottom_toBottomOf="@id/start_date_label"
                    app:layout_constraintStart_toEndOf="@id/start_date" />

                <!--Origin Game Label-->
                <TextView
                    android:id="@+id/origin_game_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/origin_game_label"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/start_date_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_label" />

                <!--Origin Game Selection Button-->
                <ImageButton
                    android:id="@+id/origin_game_button"
                    android:layout_width="@dimen/min_button_size"
                    android:layout_height="@dimen/min_button_size"
                    android:layout_marginStart="@dimen/button_margin"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_game"
                    android:contentDescription="@string/game_select_button_description"
                    app:layout_constraintTop_toTopOf="@id/origin_game_label"
                    app:layout_constraintBottom_toBottomOf="@id/origin_game_label"
                    app:layout_constraintStart_toStartOf="@id/guideline_label" />

                <!--Origin Game Icon Layout-->
                <FrameLayout
                    android:id="@+id/origin_game_icon_border"
                    android:layout_width="@dimen/min_game_icon_size"
                    android:layout_height="@dimen/min_game_icon_size"
                    android:layout_marginStart="@dimen/button_margin"
                    android:background="@drawable/ui_game_icon_border_origin"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/origin_game_button"
                    app:layout_constraintBottom_toBottomOf="@id/origin_game_button"
                    app:layout_constraintStart_toEndOf="@id/origin_game_button"
                    app:layout_constraintDimensionRatio="1:1">

                    <!--Origin Game Icon-->
                    <ImageView
                        android:id="@+id/origin_game_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ui_game_icon_border_origin"
                        android:src="@drawable/etc_default"
                        android:contentDescription="@string/origin_game_icon_desc"
                        android:clipToOutline="true" />

                </FrameLayout>

                <!--Unselect Origin Game Button-->
                <ImageButton
                    android:id="@+id/unselect_origin_game_button"
                    android:layout_width="@dimen/min_button_size"
                    android:layout_height="@dimen/min_button_size"
                    android:padding="10dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_x"
                    android:contentDescription="@string/date_unselect_description"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/origin_game_label"
                    app:layout_constraintBottom_toBottomOf="@id/origin_game_label"
                    app:layout_constraintStart_toEndOf="@id/origin_game_icon_border" />

                <!--Location Label-->
                <TextView
                    android:id="@+id/location_label"
                    android:labelFor="@id/location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/location_label"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/origin_game_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_label" />

                <!--Location Textbox-->
                <EditText
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_large"
                    android:hint="@string/location_hint"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    app:layout_constraintTop_toTopOf="@id/location_label"
                    app:layout_constraintBottom_toBottomOf="@id/location_label"
                    app:layout_constraintStart_toStartOf="@id/guideline_label"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!--Method Label-->
                <TextView
                    android:id="@+id/method_label"
                    android:labelFor="@id/method"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/method_label"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/location_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_label" />

                <!--Method Textbox-->
                <EditText
                    android:id="@+id/method"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_large"
                    android:hint="@string/method_hint"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    app:layout_constraintTop_toTopOf="@id/method_label"
                    app:layout_constraintBottom_toBottomOf="@id/method_label"
                    app:layout_constraintStart_toStartOf="@id/guideline_label"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!--Counter Label-->
                <TextView
                    android:id="@+id/counter_label"
                    android:labelFor="@id/counter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/counter_label"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/method_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_label" />

                <!--Counter Value-->
                <EditText
                    android:id="@+id/counter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textSize="@dimen/text_size_large"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    app:layout_constraintTop_toTopOf="@id/counter_label"
                    app:layout_constraintBottom_toBottomOf="@id/counter_label"
                    app:layout_constraintStart_toStartOf="@id/guideline_label"
                    app:layout_constraintEnd_toStartOf="@id/guideline_middle" />

                <!--Decrement Counter Button-->
                <ImageButton
                    android:id="@+id/decrement_counter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/min_button_size"
                    android:minHeight="@dimen/min_button_size"
                    android:layout_margin="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="@string/counter_decrement_description"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toTopOf="@id/counter_label"
                    app:layout_constraintBottom_toBottomOf="@id/counter_label"
                    app:layout_constraintStart_toEndOf="@id/counter" />

                <!--Increment Counter Button-->
                <ImageButton
                    android:id="@+id/increment_counter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/min_button_size"
                    android:minHeight="@dimen/min_button_size"
                    android:layout_margin="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="@string/counter_increment_description"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toTopOf="@id/counter_label"
                    app:layout_constraintBottom_toBottomOf="@id/counter_label"
                    app:layout_constraintStart_toEndOf="@id/decrement_counter_button" />

                <!--Counter Multiplier Button-->
                <Button
                    android:id="@+id/counter_multiplier_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/min_button_size"
                    android:minWidth="@dimen/min_button_size"
                    android:text="@string/counter_multiplier_placeholder"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/counter_label"
                    app:layout_constraintStart_toStartOf="@id/counter_label" />

                <!--Phase Label-->
                <TextView
                    android:id="@+id/phase_label"
                    android:labelFor="@id/phase"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/phase_label"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/counter_multiplier_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_label" />

                <!--Phase Value-->
                <EditText
                    android:id="@+id/phase"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textSize="@dimen/text_size_large"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    app:layout_constraintTop_toTopOf="@id/phase_label"
                    app:layout_constraintBottom_toBottomOf="@id/phase_label"
                    app:layout_constraintStart_toStartOf="@id/guideline_label"
                    app:layout_constraintEnd_toStartOf="@id/guideline_middle" />

                <!--Decrement Phase Button-->
                <ImageButton
                    android:id="@+id/decrement_phase_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/min_button_size"
                    android:minHeight="@dimen/min_button_size"
                    android:layout_margin="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="@string/phase_decrement_description"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toTopOf="@id/phase_label"
                    app:layout_constraintBottom_toBottomOf="@id/phase_label"
                    app:layout_constraintStart_toEndOf="@id/phase" />

                <!--Increment Phase Button-->
                <ImageButton
                    android:id="@+id/increment_phase_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/min_button_size"
                    android:minHeight="@dimen/min_button_size"
                    android:layout_margin="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="@string/phase_increment_description"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toTopOf="@id/phase_label"
                    app:layout_constraintBottom_toBottomOf="@id/phase_label"
                    app:layout_constraintStart_toEndOf="@id/decrement_phase_button" />

                <!--Notes Label-->
                <TextView
                    android:id="@+id/notes_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/notes_label"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/phase_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_label" />

                <!--Notes Text Field-->
                <EditText
                    android:id="@+id/notes_text"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/notes_height"
                    android:layout_marginTop="10dp"
                    android:gravity="top|start"
                    android:padding="8dp"
                    android:background="@drawable/ui_transparent_container"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    android:hint="@string/notes_hint"
                    android:autofillHints="false"
                    android:inputType="textMultiLine"
                    app:layout_constraintTop_toBottomOf="@id/notes_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!--Hunt Complete Label-->
                <TextView
                    android:id="@+id/hunt_complete_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/hunt_complete_label"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/notes_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <!--Hunt Complete Checkbox-->
                <CheckBox
                    android:id="@+id/hunt_complete_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:button="@null"
                    android:background="?android:attr/listChoiceIndicatorMultiple"
                    app:layout_constraintTop_toTopOf="@id/hunt_complete_label"
                    app:layout_constraintBottom_toBottomOf="@id/hunt_complete_label"
                    app:layout_constraintStart_toEndOf="@id/hunt_complete_label" />

                <!--Finish Date Label-->
                <TextView
                    android:id="@+id/finish_date_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:visibility="gone"
                    android:text="@string/finish_date_label"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/hunt_complete_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guideline_label" />

                <!--Finish Date Selection Button-->
                <ImageButton
                    android:id="@+id/finish_date_button"
                    android:layout_width="@dimen/min_button_size"
                    android:layout_height="@dimen/min_button_size"
                    android:layout_marginStart="@dimen/button_margin"
                    android:visibility="gone"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="@string/calendar_button_description"
                    app:layout_constraintTop_toTopOf="@id/finish_date_label"
                    app:layout_constraintBottom_toBottomOf="@id/finish_date_label"
                    app:layout_constraintStart_toStartOf="@id/guideline_label" />

                <!--Finish Date-->
                <TextView
                    android:id="@+id/finish_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/button_margin"
                    android:padding="10dp"
                    android:background="@drawable/ui_transparent_container"
                    android:visibility="gone"
                    android:text=""
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    app:layout_constraintTop_toTopOf="@id/finish_date_label"
                    app:layout_constraintBottom_toBottomOf="@id/finish_date_label"
                    app:layout_constraintStart_toEndOf="@id/finish_date_button" />

                <!--Unselect Finish Date Button-->
                <ImageButton
                    android:id="@+id/unselect_finish_date_button"
                    android:layout_width="@dimen/min_button_size"
                    android:layout_height="@dimen/min_button_size"
                    android:padding="10dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_x"
                    android:contentDescription="@string/date_unselect_description"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/finish_date_label"
                    app:layout_constraintBottom_toBottomOf="@id/finish_date_label"
                    app:layout_constraintStart_toEndOf="@id/finish_date" />

                <!--Current Game Label-->
                <TextView
                    android:id="@+id/current_game_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:text="@string/current_game_label"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/finish_date_label"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_label" />

                <!--Current Game Selection Button-->
                <ImageButton
                    android:id="@+id/current_game_button"
                    android:layout_width="@dimen/min_button_size"
                    android:layout_height="@dimen/min_button_size"
                    android:layout_marginStart="@dimen/button_margin"
                    android:background="@null"
                    android:visibility="gone"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_game"
                    android:contentDescription="@string/game_select_button_description"
                    app:layout_constraintTop_toTopOf="@id/current_game_label"
                    app:layout_constraintBottom_toBottomOf="@id/current_game_label"
                    app:layout_constraintStart_toStartOf="@id/guideline_label" />

                <!--Current Game Icon Layout-->
                <FrameLayout
                    android:id="@+id/current_game_icon_border"
                    android:layout_width="@dimen/min_game_icon_size"
                    android:layout_height="@dimen/min_game_icon_size"
                    android:layout_marginStart="@dimen/button_margin"
                    android:background="@drawable/ui_game_icon_border_current"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/current_game_label"
                    app:layout_constraintBottom_toBottomOf="@id/current_game_label"
                    app:layout_constraintStart_toEndOf="@id/current_game_button">

                    <!--Current Game Icon-->
                    <ImageView
                        android:id="@+id/current_game_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ui_game_icon_border_current"
                        android:src="@drawable/etc_default"
                        android:contentDescription="@string/current_game_icon_desc"
                        android:clipToOutline="true" />

                </FrameLayout>

                <!--Unselect Current Game Button-->
                <ImageButton
                    android:id="@+id/unselect_current_game_button"
                    android:layout_width="@dimen/min_button_size"
                    android:layout_height="@dimen/min_button_size"
                    android:padding="10dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_x"
                    android:contentDescription="@string/date_unselect_description"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/current_game_label"
                    app:layout_constraintBottom_toBottomOf="@id/current_game_label"
                    app:layout_constraintStart_toEndOf="@id/current_game_icon_border" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>