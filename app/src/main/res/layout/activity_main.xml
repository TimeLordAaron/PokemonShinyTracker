<?xml version="1.0" encoding="utf-8"?>
<!--Main Page Layout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    android:background="@drawable/ui_gradient_homepage">

    <!--Top Bar-->
    <LinearLayout
        android:id="@+id/top_bar"
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center">

        <!--New Hunt Button-->
        <Button
            android:id="@+id/new_hunt_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/increment_symbol"
            android:textSize="15sp"
            android:textColor="@color/black" />

        <!--Search Bar-->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/ui_textbox"
            android:hint="@string/pokemon_search_hint"
            android:inputType="text"
            android:importantForAutofill="no" />

        <!--Search Button-->
        <Button
            android:id="@+id/search_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/search_label"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textAllCaps="false" />

    </LinearLayout>

    <!--No Hunts Message-->
    <TextView
        android:id="@+id/no_hunts_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/no_hunts_message"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!--Shiny Hunt Recycler View-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shiny_hunts_recycler_view"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>