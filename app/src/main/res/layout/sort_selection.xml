<?xml version="1.0" encoding="utf-8"?>
<!--Filter Selection Scroll-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Sort Selection Layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!--Guideline for Label Column-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.25"
            android:orientation="vertical" />

        <!--Sort Method Label-->
        <TextView
            android:id="@+id/sort_method_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_by"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_label" />

        <!--Sort Method-->
        <Spinner
            android:id="@+id/sort_method_spinner"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/min_button_size"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/sort_method_label"
            app:layout_constraintBottom_toBottomOf="@id/sort_method_label"
            app:layout_constraintStart_toEndOf="@id/sort_method_label" />

        <!--Sort Order Label-->
        <TextView
            android:id="@+id/sort_order_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/sort_order"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/sort_method_label"
            app:layout_constraintEnd_toStartOf="@id/guideline_label" />

        <!--Sort Orders-->
        <RadioGroup
            android:id="@+id/sort_orders_radio_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sort_order_label"
            app:layout_constraintBottom_toBottomOf="@id/sort_order_label"
            app:layout_constraintStart_toEndOf="@id/sort_order_label">

            <!--Descending Radio Button-->
            <RadioButton
                android:id="@+id/descending_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/descending_label"
                android:textSize="@dimen/text_size_small" />

            <!--Ascending Radio Button-->
            <RadioButton
                android:id="@+id/ascending_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/ascending_label"
                android:textSize="@dimen/text_size_small" />

        </RadioGroup>

        <!--Confirm Sort Button-->
        <Button
            android:id="@+id/confirm_sort_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_button_size"
            android:minHeight="@dimen/min_button_size"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:text="@string/confirm_sort"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/sort_order_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>