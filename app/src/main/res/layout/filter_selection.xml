<?xml version="1.0" encoding="utf-8"?>
<!--Filter Selection Scroll-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Filter Selection Layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!--Guideline for Label Column-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.25"
            android:orientation="vertical" />

        <!--Clear Filters Button-->
        <Button
            android:id="@+id/clear_filters_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/min_button_size"
            android:minWidth="@dimen/min_button_size"
            android:text="@string/clear_filters_label"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--Pokemon Label-->
        <TextView
            android:id="@+id/pokemon_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/pokemon_label"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/clear_filters_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_label" />

        <!--Pokemon Edit Button-->
        <ImageButton
            android:id="@+id/edit_pokemon_button"
            android:layout_width="@dimen/min_button_size"
            android:layout_height="@dimen/min_button_size"
            android:layout_marginStart="@dimen/button_margin"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_pokeball"
            android:contentDescription="@string/pokemon_select_button_description"
            app:layout_constraintTop_toTopOf="@id/pokemon_label"
            app:layout_constraintBottom_toBottomOf="@id/pokemon_label"
            app:layout_constraintStart_toStartOf="@id/guideline_label" />

        <!--Pokemon Text-->
        <TextView
            android:id="@+id/pokemon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_margin"
            android:text="@string/pokemon_selected_default"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintTop_toTopOf="@id/pokemon_label"
            app:layout_constraintBottom_toBottomOf="@id/pokemon_label"
            app:layout_constraintStart_toEndOf="@id/edit_pokemon_button" />

        <!--Origin Games Label-->
        <TextView
            android:id="@+id/origin_games_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/origin_games_label"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/pokemon_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_label" />

        <!--Origin Games Edit Button-->
        <ImageButton
            android:id="@+id/edit_origin_games_button"
            android:layout_width="@dimen/min_button_size"
            android:layout_height="@dimen/min_button_size"
            android:layout_marginStart="@dimen/button_margin"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_game"
            android:contentDescription="@string/game_select_button_description"
            app:layout_constraintTop_toTopOf="@id/origin_games_label"
            app:layout_constraintBottom_toBottomOf="@id/origin_games_label"
            app:layout_constraintStart_toEndOf="@id/origin_games_label" />

        <!--Origin Games Text-->
        <TextView
            android:id="@+id/origin_games_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_margin"
            android:text="@string/games_selected_default"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintTop_toTopOf="@id/origin_games_label"
            app:layout_constraintBottom_toBottomOf="@id/origin_games_label"
            app:layout_constraintStart_toEndOf="@id/edit_origin_games_button" />

        <!--Completion Status Label-->
        <TextView
            android:id="@+id/completion_status_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/completion_status_label"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/origin_games_label"
            app:layout_constraintStart_toStartOf="parent" />

        <!--Completion Statuses-->
        <RadioGroup
            android:id="@+id/completion_statuses_radio_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/completion_status_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!--In Progress Radio Button-->
            <RadioButton
                android:id="@+id/in_progress_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/min_button_size"
                android:layout_margin="5dp"
                android:text="@string/in_progress_label"
                android:textSize="@dimen/text_size_small" />

            <!--Completed Radio Button-->
            <RadioButton
                android:id="@+id/completed_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/min_button_size"
                android:layout_margin="5dp"
                android:text="@string/completed_label"
                android:textSize="@dimen/text_size_small" />

            <!--Both Button-->
            <RadioButton
                android:id="@+id/both_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/min_button_size"
                android:layout_margin="5dp"
                android:text="@string/both_label"
                android:textSize="@dimen/text_size_small" />

        </RadioGroup>

        <!--Current Games Label-->
        <TextView
            android:id="@+id/current_games_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/current_games_label"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/completion_statuses_radio_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_label" />

        <!--Current Games Edit Button-->
        <ImageButton
            android:id="@+id/edit_current_games_button"
            android:layout_width="@dimen/min_button_size"
            android:layout_height="@dimen/min_button_size"
            android:layout_marginStart="@dimen/button_margin"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_game"
            android:contentDescription="@string/game_select_button_description"
            app:layout_constraintTop_toTopOf="@id/current_games_label"
            app:layout_constraintBottom_toBottomOf="@id/current_games_label"
            app:layout_constraintStart_toStartOf="@id/guideline_label" />

        <!--Current Games Text-->
        <TextView
            android:id="@+id/current_games_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_margin"
            android:text="@string/games_selected_default"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintTop_toTopOf="@id/current_games_label"
            app:layout_constraintBottom_toBottomOf="@id/current_games_label"
            app:layout_constraintStart_toEndOf="@id/edit_current_games_button" />

        <!--Method Label-->
        <TextView
            android:id="@+id/method_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/method_label"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/current_games_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_label" />

        <!--Method Textbox-->
        <EditText
            android:id="@+id/method"
            android:layout_width="0dp"
            android:layout_height="@dimen/min_button_size"
            android:layout_marginStart="@dimen/button_margin"
            android:padding="10dp"
            android:background="@drawable/ui_textbox"
            android:hint="@string/method_hint"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:inputType="text"
            android:importantForAutofill="no"
            app:layout_constraintTop_toTopOf="@id/method_label"
            app:layout_constraintBottom_toBottomOf="@id/method_label"
            app:layout_constraintStart_toStartOf="@id/guideline_label"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--Start Date Label-->
        <TextView
            android:id="@+id/start_date_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/start_date_label"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/method_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_label" />

        <!--Start From Button-->
        <Button
            android:id="@+id/start_date_from_button"
            android:layout_width="@dimen/date_button_width"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_button_size"
            android:minHeight="@dimen/min_button_size"
            android:layout_marginStart="@dimen/button_margin"
            android:text="2025-01-01"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@id/start_date_label"
            app:layout_constraintBottom_toBottomOf="@id/start_date_label"
            app:layout_constraintStart_toStartOf="@id/guideline_label" />

        <!--To Text-->
        <TextView
            android:id="@+id/start_date_to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_margin"
            android:text="@string/to"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/start_date_label"
            app:layout_constraintBottom_toBottomOf="@id/start_date_label"
            app:layout_constraintStart_toEndOf="@id/start_date_from_button" />

        <!--Start To Button-->
        <Button
            android:id="@+id/start_date_to_button"
            android:layout_width="@dimen/date_button_width"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_button_size"
            android:minHeight="@dimen/min_button_size"
            android:layout_marginStart="@dimen/button_margin"
            android:text="2025-02-01"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="@id/start_date_label"
            app:layout_constraintBottom_toBottomOf="@id/start_date_label"
            app:layout_constraintStart_toEndOf="@id/start_date_to_text" />

            <!--Finish Date Label-->
            <TextView
                android:id="@+id/finish_date_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/finish_date_label"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                app:layout_constraintTop_toBottomOf="@id/start_date_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_label" />

            <!--Finish From Button-->
            <Button
                android:id="@+id/finish_date_from_button"
                android:layout_width="@dimen/date_button_width"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/min_button_size"
                android:minHeight="@dimen/min_button_size"
                android:layout_marginStart="@dimen/button_margin"
                android:text="2025-01-01"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                android:textAllCaps="false"
                app:layout_constraintTop_toTopOf="@id/finish_date_label"
                app:layout_constraintBottom_toBottomOf="@id/finish_date_label"
                app:layout_constraintStart_toStartOf="@id/guideline_label" />

            <!--To Text-->
            <TextView
                android:id="@+id/finish_date_to_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/button_margin"
                android:text="@string/to"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/finish_date_label"
                app:layout_constraintBottom_toBottomOf="@id/finish_date_label"
                app:layout_constraintStart_toEndOf="@id/finish_date_from_button" />

            <!--Finish To Button-->
            <Button
                android:id="@+id/finish_date_to_button"
                android:layout_width="@dimen/date_button_width"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/min_button_size"
                android:minHeight="@dimen/min_button_size"
                android:layout_marginStart="@dimen/button_margin"
                android:text="2025-02-01"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                android:textAllCaps="false"
                app:layout_constraintTop_toTopOf="@id/finish_date_label"
                app:layout_constraintBottom_toBottomOf="@id/finish_date_label"
                app:layout_constraintStart_toEndOf="@id/finish_date_to_text" />

            <!--Counter Label-->
            <TextView
                android:id="@+id/counter_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/counter_label"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                app:layout_constraintTop_toBottomOf="@id/finish_date_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_label" />

            <!--Counter Low Textbox-->
            <EditText
                android:id="@+id/counter_lo"
                android:layout_width="0dp"
                android:layout_height="@dimen/min_button_size"
                android:padding="10dp"
                android:background="@drawable/ui_textbox"
                android:hint="@string/low"
                android:textSize="@dimen/text_size_small"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:inputType="number"
                android:importantForAutofill="no"
                app:layout_constraintTop_toTopOf="@id/counter_label"
                app:layout_constraintBottom_toBottomOf="@id/counter_label"
                app:layout_constraintStart_toStartOf="@id/start_date_from_button"
                app:layout_constraintEnd_toEndOf="@id/start_date_from_button" />

            <!--To Text-->
            <TextView
                android:id="@+id/counter_to_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/button_margin"
                android:text="@string/to"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/counter_label"
                app:layout_constraintBottom_toBottomOf="@id/counter_label"
                app:layout_constraintStart_toEndOf="@id/counter_lo" />

            <!--Counter High Textbox-->
            <EditText
                android:id="@+id/counter_hi"
                android:layout_width="0dp"
                android:layout_height="@dimen/min_button_size"
                android:padding="10dp"
                android:background="@drawable/ui_textbox"
                android:hint="@string/high"
                android:textSize="@dimen/text_size_small"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:inputType="number"
                android:importantForAutofill="no"
                app:layout_constraintTop_toTopOf="@id/counter_label"
                app:layout_constraintBottom_toBottomOf="@id/counter_label"
                app:layout_constraintStart_toStartOf="@id/start_date_to_button"
                app:layout_constraintEnd_toEndOf="@id/start_date_to_button" />

        <!--Phase Label-->
        <TextView
            android:id="@+id/phase_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/phase_label"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/counter_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_label" />

        <!--Phase Low Textbox-->
        <EditText
            android:id="@+id/phase_lo"
            android:layout_width="0dp"
            android:layout_height="@dimen/min_button_size"
            android:padding="10dp"
            android:background="@drawable/ui_textbox"
            android:hint="@string/low"
            android:textSize="@dimen/text_size_small"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:inputType="number"
            android:importantForAutofill="no"
            app:layout_constraintTop_toTopOf="@id/phase_label"
            app:layout_constraintBottom_toBottomOf="@id/phase_label"
            app:layout_constraintStart_toStartOf="@id/counter_lo"
            app:layout_constraintEnd_toEndOf="@id/counter_lo" />

        <!--To Text-->
        <TextView
            android:id="@+id/phase_to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_margin"
            android:text="@string/to"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/phase_label"
            app:layout_constraintBottom_toBottomOf="@id/phase_label"
            app:layout_constraintStart_toEndOf="@id/phase_lo" />

        <!--Phase High Textbox-->
        <EditText
            android:id="@+id/phase_hi"
            android:layout_width="0dp"
            android:layout_height="@dimen/min_button_size"
            android:padding="10dp"
            android:background="@drawable/ui_textbox"
            android:hint="@string/high"
            android:textSize="@dimen/text_size_small"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:inputType="number"
            android:importantForAutofill="no"
            app:layout_constraintTop_toTopOf="@id/phase_label"
            app:layout_constraintBottom_toBottomOf="@id/phase_label"
            app:layout_constraintStart_toStartOf="@id/counter_hi"
            app:layout_constraintEnd_toEndOf="@id/counter_hi" />

        <!--Confirm Filters Button-->
        <Button
            android:id="@+id/confirm_filters_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/min_button_size"
            android:minHeight="@dimen/min_button_size"
            android:layout_margin="50dp"
            android:text="@string/confirm_filters"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/phase_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>