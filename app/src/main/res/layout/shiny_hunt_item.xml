<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">
    <!--Shiny Hunt Template-->
    <LinearLayout
        android:id="@+id/background"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ui_container_incomplete_hunt"
        android:longClickable="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Image-->
            <ImageView
                android:id="@+id/pokemonImage"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:src="@drawable/etc_default"/>

            <!--Details-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/ui_container_transparent">

                <!--Name + Game-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ui_container_transparent">

                    <!--Pokemon Name-->
                    <TextView
                        android:id="@+id/pokemonName"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="@string/namePlaceholder"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                    <!--Games-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <!--Origin Game-->
                        <FrameLayout
                            android:id="@+id/originGameIconBorder"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ui_game_icon_border_origin"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/originGameIcon"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/originGameIconDesc"
                                android:background="@drawable/ui_game_icon_border_origin"
                                android:src="@drawable/etc_default"
                                android:clipToOutline="true" />

                        </FrameLayout>

                        <!--Current Game-->
                        <FrameLayout
                            android:id="@+id/currentGameIconBorder"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ui_game_icon_border_current"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/currentGameIcon"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/currentGameIconDesc"
                                android:background="@drawable/ui_game_icon_border_current"
                                android:src="@drawable/etc_default"
                                android:clipToOutline="true" />

                        </FrameLayout>


                    </LinearLayout>

                </LinearLayout>

                <!--Counter Layout-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp">

                    <!--Method-->
                    <TextView
                        android:id="@+id/method"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/counterLabel"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                    <!--Counter-->
                    <TextView
                        android:id="@+id/counterValue"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"

                        android:gravity="center"
                        android:text="@string/defaultCounter"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                    <!--Counter + Buttons-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <!--Counter Decrement Button-->
                        <Button
                            android:id="@+id/counterDecrement"
                            android:layout_width="70dp"
                            android:layout_height="48dp"
                            android:text="@string/decrementSymbol"
                            android:textColor="@color/black"/>

                        <!--Counter Increment Button-->
                        <Button
                            android:id="@+id/counterIncrement"
                            android:layout_width="70dp"
                            android:layout_height="48dp"
                            android:text="@string/incrementSymbol"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Long Click Menu (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/longClickMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone">

            <!--Move Up Button-->
            <ImageButton
                android:id="@+id/moveUpButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_up"
                android:contentDescription="@string/move_up" />

            <!--Move Down Button-->
            <ImageButton
                android:id="@+id/moveDownButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_down"
                android:contentDescription="@string/move_down" />

            <!--Edit Button-->
            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_pencil"
                android:contentDescription="@string/edit" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>