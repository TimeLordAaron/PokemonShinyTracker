<?xml version="1.0" encoding="utf-8"?>
<!--Shiny Hunt Item Layout-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shiny_hunt_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/ui_shiny_hunt_item_container_incomplete"
    android:longClickable="true">

    <!--Main Layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/long_click_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--Pokemon Image-->
        <ImageView
            android:id="@+id/pokemon_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:contentDescription="@string/pokemon_item_image_description"
            android:src="@drawable/etc_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/hunt_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.34" />

        <!--Hunt Details Layout-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hunt_details"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:background="@drawable/ui_transparent_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pokemon_image"
            app:layout_constraintTop_toTopOf="parent">

            <!--Name + Games Layout-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/name_and_games_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:background="@drawable/ui_transparent_container"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/counter_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Pokemon Name -->
                <TextView
                    android:id="@+id/pokemon_name"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/name_placeholder"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/games_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_default="spread"
                    app:layout_constraintHeight_default="spread"
                    app:layout_constraintHeight_percent="0.35"/>

                <!--Games Layout-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/games_layout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/pokemon_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.65">

                    <androidx.constraintlayout.helper.widget.Flow
                        android:id="@+id/games_flow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:flow_wrapMode="chain"
                        app:flow_horizontalGap="10dp"
                        app:constraint_referenced_ids="origin_game_icon_border,current_game_icon_border"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <!--Origin Game Icon Layout-->
                    <FrameLayout
                        android:id="@+id/origin_game_icon_border"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/ui_game_icon_border_origin"
                        android:visibility="visible"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintWidth_percent="0.4">

                        <!--Origin Game Icon-->
                        <ImageView
                            android:id="@+id/origin_game_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ui_game_icon_border_origin"
                            android:clipToOutline="true"
                            android:contentDescription="@string/origin_game_icon_desc"
                            android:src="@drawable/etc_default" />

                    </FrameLayout>

                    <!--Current Game Icon Layout-->
                    <FrameLayout
                        android:id="@+id/current_game_icon_border"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/ui_game_icon_border_current"
                        android:visibility="visible"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintWidth_percent="0.4">

                        <!--Current Game Icon-->
                        <ImageView
                            android:id="@+id/current_game_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ui_game_icon_border_current"
                            android:clipToOutline="true"
                            android:contentDescription="@string/current_game_icon_desc"
                            android:src="@drawable/etc_default" />

                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Counter Layout-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/counter_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/name_and_games_layout"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Counter Label -->
                <TextView
                    android:id="@+id/counter_label"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/counter_label"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/counter_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.35"/>

                <!-- Counter Value -->
                <TextView
                    android:id="@+id/counter_value"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/default_counter"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/counter_label"
                    app:layout_constraintBottom_toTopOf="@id/counter_buttons_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.20"/>

                <!--Counter Buttons Layout-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/counter_buttons_layout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:minHeight="@dimen/min_button_size"
                    app:layout_constraintTop_toBottomOf="@id/counter_value"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.45">

                    <androidx.constraintlayout.helper.widget.Flow
                        android:id="@+id/counter_buttons_flow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:flow_wrapMode="chain"
                        app:flow_horizontalGap="1dp"
                        app:constraint_referenced_ids="decrement_counter_button,increment_counter_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <!--Decrement Counter Button-->
                    <ImageButton
                        android:id="@+id/decrement_counter_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minWidth="@dimen/min_button_size"
                        android:minHeight="@dimen/min_button_size"
                        android:contentDescription="@string/counter_decrement_description"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_minus"
                        app:layout_constraintDimensionRatio="1:1" />

                    <!--Increment Counter Button-->
                    <ImageButton
                        android:id="@+id/increment_counter_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:minWidth="@dimen/min_button_size"
                        android:minHeight="@dimen/min_button_size"
                        android:contentDescription="@string/counter_increment_description"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_plus"
                        app:layout_constraintDimensionRatio="1:1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Long Click Menu (Initially Hidden) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/long_click_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/min_button_size"
        android:gravity="end"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/main_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:flow_wrapMode="none"
            app:flow_horizontalStyle="packed"
            app:flow_horizontalBias="1.0"
            app:constraint_referenced_ids="move_up_button,move_down_button,edit_button,delete_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--Move Up Button-->
        <ImageButton
            android:id="@+id/move_up_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minWidth="@dimen/min_button_size"
            android:minHeight="@dimen/min_button_size"
            android:padding="10dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_arrow_up"
            android:contentDescription="@string/move_up"
            app:layout_constraintDimensionRatio="1:1" />

        <!--Move Down Button-->
        <ImageButton
            android:id="@+id/move_down_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minWidth="@dimen/min_button_size"
            android:minHeight="@dimen/min_button_size"
            android:padding="10dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_arrow_down"
            android:contentDescription="@string/move_down"
            app:layout_constraintDimensionRatio="1:1" />

        <!--Edit Button-->
        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minWidth="@dimen/min_button_size"
            android:minHeight="@dimen/min_button_size"
            android:padding="10dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_pencil"
            android:contentDescription="@string/edit"
            app:layout_constraintDimensionRatio="1:1" />

        <!--Delete Button-->
        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minWidth="@dimen/min_button_size"
            android:minHeight="@dimen/min_button_size"
            android:padding="10dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_trash"
            android:contentDescription="@string/edit"
            app:layout_constraintDimensionRatio="1:1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
